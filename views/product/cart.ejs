<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= products ? products.name : 'Cart' %></title>
  </head>
  <body>
    <a href="/" id="home">Home</a>
    <a href="/product"> Back to shopping</a>
    <div class="products-details">
      <% let totalPrice=0; %>
      <% if (cart && cart.items.length > 0) { %>
        <ul>
          <% cart.items.forEach(item => { %>
            <li>
              <h1><%= item.product.name %></h1> - <br>
              <% if (item.product.image) { %>
                <img src="/uploads/<%= item.product.image %>" alt="<%= item.product.name %>" class="product-pic1">
              <% } %>
              <h2>Price:<%= item.product.price %> BHD Qty: <%= item.quantity %></h2>

              <% if (user) { %>
                <form action="/cart/<%= item.product._id %>?_method=PUT" method="POST" style="display:inline;">
                  <input type="number" name="quantity" value="<%= item.quantity %>" min="1" />
                  <button type="submit">Update</button>
                </form>

                <form action="/cart/<%= item.product._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="delete-btn">üóëÔ∏è</button>
                </form>
              <% } %>
              <% totalPrice+=item.product.price*item.quantity %> 
            </li>
          <% }) %>
        </ul>
        <h1>the total price is <%= totalPrice %> BHD</h1>
        <% if (user) { %>
          <a href="/checkout">Proceed to Checkout</a>
        <% } %>
      <% } else { %>
        <p>Your cart is empty.</p>
      <% } %>
    </div>
  </body>
</html>
