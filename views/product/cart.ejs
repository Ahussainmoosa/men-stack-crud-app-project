<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= products ? products.name : 'Cart' %></title>
  </head>
  <body>
    <nav>
      <%- include('../partials/_navbar.ejs') %>
    </nav>

    <div class="cart-container">
      <% let totalPrice = 0; %>
      <% if (cart && cart.items.length > 0) { %>
        <% cart.items.forEach(item => { %>
          <% if(item.product) { %>
            <div class="order-card">
              <div class="order-card-content">
                <div class="order-card-info">
                  <h2 class="product-name"><%= item.product.name %></h2>
                  <p class="product-description"><%= item.product.description %></p>
                  <h3 class="product-price">Price: <%= item.product.price %> BHD</h3>
                </div>

                <% if (item.product.image) { %>
                  <div class="order-card-image">
                    <img src="/uploads/<%= item.product.image %>" alt="<%= item.product.name %>" class="product-pic1">
                  </div>
                <% } %>
              </div>

              <div class="order-card-actions">
                <p>Quantity: <%= item.quantity %></p>
                <% if (user) { %>
                  <form action="/cart/<%= item.product._id %>?_method=PUT" method="POST" style="display:inline;">
                    <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="quantity-input"/>
                    <button type="submit" class="update-btn">Update</button>
                  </form>

                  <form action="/cart/<%= item.product._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="delete-btn">üóëÔ∏è</button>
                  </form>
                <% } %>
              </div>
            </div>
            <% totalPrice += item.product.price * item.quantity %>
          <% } %>
        <% }) %>

        <h2 class="total-price">Total: <%= totalPrice %> BHD</h2>
        <% if (user) { %>
          <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
        <% } %>
      <% } else { %>
        <p class="empty-cart">Your cart is empty.</p>
      <% } %>
    </div>
  </body>
</html>
