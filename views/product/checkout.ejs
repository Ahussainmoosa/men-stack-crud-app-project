<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Checkout</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>

  <h1 class="checkout-title">Checkout</h1>

  <div class="checkout-container">
    <% if (cartItems.length > 0) { %>
      <!-- Single box containing all products -->
      <div class="order-card">
        <% cartItems.forEach(item => { %>
          <% if(item.product) { %>
            <div class="order-item">
              <% if(item.product.image) { %>
                <img src="/uploads/<%= item.product.image %>" alt="<%= item.product.name %>" class="order-item-image">
              <% } %>
              <div class="order-item-info">
                <span class="product-name"><%= item.product.name %></span> - 
                <span class="product-price"><%= item.product.price %> BHD</span>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>

      <h2 class="total-price">Total: <%= totalPrice %> BHD</h2>

      <form action="/checkout" method="POST" class="checkout-form">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required>

        <label for="email">Contact Email:</label>
        <input type="email" name="email" id="email" required>

        <label for="address">Address:</label>
        <input type="text" name="address" id="address" required>

        <label for="phone">Phone:</label>
        <input type="text" name="phone" id="phone" required>

        <button type="submit" class="checkout-btn">Place Order</button>
      </form>
    <% } else { %>
      <p class="empty-cart">Your cart is empty.</p>
      <a href="/product" class="back-to-shop">Go back to shop</a>
    <% } %>
  </div>
</body>
</html>
